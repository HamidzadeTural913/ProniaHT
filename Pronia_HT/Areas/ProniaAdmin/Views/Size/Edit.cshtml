@model Size
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div>
    <label class="mb-2">Size Name:</label><br />
    <input asp-for="Name" class="form-control" type="text" />
    <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>

