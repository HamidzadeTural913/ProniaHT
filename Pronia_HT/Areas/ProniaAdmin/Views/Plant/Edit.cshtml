@model Plant
@{
    ViewData["Title"] = "PlantEdit";
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post" enctype="multipart/form-data">
    
    <div>
    <label class="mb-2">Plant Name:</label><br />
    <input asp-for="Name" class="form-control"/>
    <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div>
    <label class="mb-2">Plant Price:</label><br />
    <input asp-for="Price" class="form-control"/>
    <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div>
    <label class="mb-2">Plant Description:</label><br />
    <input asp-for="Description" class="form-control"/>
    <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div>
    <label class="mb-2">Plant SkuCode:</label><br />
    <input asp-for="SkuCode" class="form-control"/>
    <span class="text-danger" asp-validation-for="SkuCode"></span>
    </div>

    <div>
    <label class="mb-2">Plant Colors:</label><br />
    <select class="form-control" asp-for="ColorId" asp-items="@(new SelectList(ViewBag.Colors,"Id","Name"))"></select>
    <span class="text-danger" asp-validation-for="ColorId"></span>
    </div>

    <div>
    <label class="mb-2">Plant Sizes:</label><br />
    <select class="form-control" asp-for="SizeId" asp-items="@(new SelectList(ViewBag.Sizes,"Id","Name"))"></select>
    <span class="text-danger" asp-validation-for="SizeId"></span>
    </div>

    <div>
    <label class="mb-2">Plant Categories:</label><br />
    <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))"></select>
    <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <div>
    <label class="mb-2">Plant Shipping:</label><br />
    <input asp-for="Shipping" class="form-control"  />
    <span class="text-danger" asp-validation-for="Shipping"></span>
    </div>

     <div>
    <label class="mb-2">Plant Request:</label><br />
    <input asp-for="Request" class="form-control" accept="image/*" />
    <span class="text-danger" asp-validation-for="Request"></span>
    </div>

    <div>
    <label class="mb-2">Plant Guarantee:</label><br />
    <input asp-for="Guarantee" class="form-control" accept="image/*" />
    <span class="text-danger" asp-validation-for="Guarantee"></span>
    </div>

     <div>
    <label class="mb-2">Plant MainImage:</label><br />
    <input asp-for="MainImage" class="form-control" accept="image/*" />
    <span class="text-danger" asp-validation-for="MainImage"></span>
    </div>

     <div>
    <label class="mb-2">Plant Another Image:</label><br />
    <input asp-for="AnotherImage" class="form-control" accept="image/*" />
    <span class="text-danger" asp-validation-for="AnotherImage"></span>
    </div>

    <div>
     <span class="mb-2">Plant MainImage:</span><br />
    <div class="d-flex">
        <div class="col-lg-2" style="position:relative">
        <i class="mdi mdi-close closeBtn" style="position:absolute; top:20px; right:50px; color:red; font-size:20px" ></i>
        <img style="width: 150px; height:90px" src="~/assets/images/website-images/@Model.PlantImages.FirstOrDefault(i=>i.IsMain==true)?.ImagePath"/>
        <input type="hidden" value="@Model.PlantImages.FirstOrDefault(i=>i.IsMain==true)?.Id" name="ImageIds"/>
        </div>
    </div>
   
    </div>

    <div>
        <span>Another Images</span>
        <div class="d-flex">
            @foreach (var image in Model.PlantImages.Where(i=>i.IsMain==false))
           {
               <div col-lg-2 style="position:relative">
                <i class="mdi mdi-close closeBtn" style="position:absolute; top:10px; right:5px; color:red; font-size:20px" ></i>
                <img style="width: 150px; height:90px" src="~/assets/images/website-images/@image.ImagePath"/>
                <input type="hidden" value="@image.Id" name="ImageIds"/>
               </div>
           }
        </div>
    </div>


    <div class="mt-3">
       <button type="submit" class="btn btn-primary">Edit Slider</button>
    </div>
</form>

@section Scripts{
    <script>
      $(".closeBtn").click(function(){
          this.parentNode.remove();
      })
    </script>
}


