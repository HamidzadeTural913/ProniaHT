@model Slider
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div>
    <label class="mb-2">Slider Title:</label><br />
    <input asp-for="Title" class="form-control" type="text" />
    <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div>
    <label class="mb-2">Slider Subtitle:</label><br />
    <input asp-for="Subtitle" class="form-control" type="text" />
    <span class="text-danger" asp-validation-for="Subtitle"></span>
    </div>

    <div>
    <label class="mb-2">Slider Order:</label><br />
    <input asp-for="Order" class="form-control" />
    <span class="text-danger" asp-validation-for="Order"></span>
    </div>

    <div>
    <label class="mb-2">Slider Discover Url:</label><br />
    <input asp-for="DiscoverUrl" class="form-control" type="text" />
    <span class="text-danger" asp-validation-for="DiscoverUrl"></span>
    </div>

    <div>
    <label class="mb-2">Slider Image:</label><br />
    <input asp-for="Image" class="form-control" />
    <span class="text-danger" asp-validation-for="Image"></span>
    </div>

    <div>
    <label class="mb-2">Slider Discount:</label><br />
    <input asp-for="Discount" class="form-control" />
    <span class="text-danger" asp-validation-for="Discount"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>


